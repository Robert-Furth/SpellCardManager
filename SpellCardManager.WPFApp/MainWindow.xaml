<Window x:Class="SpellCardManager.WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SpellCardManager.WPFApp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:modernwpf="http://schemas.modernwpf.com/2019"
        xmlns:views="clr-namespace:SpellCardManager.WPFApp.Views"
        xmlns:vm="clr-namespace:SpellCardManager.ViewModels;assembly=SpellCardManager"
        Title="{Binding WindowName}"
        Width="800"
        Height="450"
        MinWidth="500"
        MinHeight="200"
        d:DataContext="{d:DesignInstance Type={x:Type vm:MainViewModelDesign},
                                         IsDesignTimeCreatable=True}"
        modernwpf:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d">
    <Window.InputBindings>
        <KeyBinding Key="N"
                    Command="{Binding NewFileCommand}"
                    Modifiers="Ctrl+Shift" />
        <KeyBinding Key="S"
                    Command="{Binding SaveCurrentFileCommand}"
                    Modifiers="Ctrl" />
        <KeyBinding Key="S"
                    Command="{Binding SaveAsCommand}"
                    Modifiers="Ctrl+Shift" />
        <KeyBinding Key="O"
                    Command="{Binding OpenFileCommand}"
                    Modifiers="Ctrl" />

        <KeyBinding Key="N"
                    Command="{Binding EditNewSpellCommand}"
                    Modifiers="Ctrl" />
        <KeyBinding Key="E"
                    Command="{Binding EditSelectedSpellCommand}"
                    Modifiers="Ctrl" />
        <KeyBinding Key="T"
                    Command="{Binding EditTagsCommand}"
                    Modifiers="Ctrl" />
    </Window.InputBindings>

    <views:MainView x:Name="MainView" />
</Window>
