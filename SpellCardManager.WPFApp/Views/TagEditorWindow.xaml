<Window x:Class="SpellCardManager.WPFApp.Views.TagEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctrl="clr-namespace:SpellCardManager.WPFApp.Controls"
        xmlns:cvt="clr-namespace:SpellCardManager.WPFApp.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SpellCardManager.WPFApp.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mwpf="http://schemas.modernwpf.com/2019"
        xmlns:vm="clr-namespace:SpellCardManager.ViewModels;assembly=SpellCardManager"
        Title="Edit Tags"
        Width="450"
        Height="400"
        d:DataContext="{d:DesignInstance vm:TagEditorViewModel,
                                         IsDesignTimeCreatable=True}"
        mc:Ignorable="d">
    <Window.Resources>
        <cvt:ColorToBrushConverter x:Key="colorToBrushConverter" />
        <cvt:ColorToColorConverter x:Key="colorToColorConverter" />
        <cvt:DarkOrLightTextConverter x:Key="darkOrLightTextConverter" />
        <cvt:StringOrDefaultConverter x:Key="stringOrDevaultConverter" />
    </Window.Resources>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1.5*" MaxWidth="350" />
        </Grid.ColumnDefinitions>

        <TextBox Margin="0,0,0,5"
                 mwpf:ControlHelper.PlaceholderText="Search tags"
                 Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" />

        <ListView Name="TagListView"
                  Grid.Row="1"
                  BorderBrush="{DynamicResource TextControlBorderBrush}"
                  BorderThickness="1"
                  ItemsSource="{Binding FilteredTags, Mode=OneWay}"
                  SelectedIndex="{Binding SelectedIndex}"
                  SelectedItem="{Binding SelectedTag}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <local:Tag Foreground="{Binding Color, Converter={StaticResource darkOrLightTextConverter}}"
                               TagBackground="{Binding Color, Converter={StaticResource colorToBrushConverter}}"
                               Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <mwpf:SimpleStackPanel Grid.Row="2"
                               Margin="0,5,0,0"
                               Orientation="Horizontal"
                               Spacing="5">
            <Button Command="{Binding AddTagCommand}">New</Button>
            <Button Command="{Binding RemoveTagCommand}">Delete</Button>
        </mwpf:SimpleStackPanel>

        <Grid Grid.Row="1"
              Grid.Column="1"
              Margin="10,0,0,0"
              IsEnabled="{Binding IsAnySelected, Mode=OneWay}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Margin="0,0,10,10" VerticalAlignment="Center">Name</TextBlock>
            <TextBox Grid.Column="1"
                     Margin="0,0,0,10"
                     VerticalAlignment="Center"
                     LostFocus="TextBox_LostFocus">
                <TextBox.Text>
                    <Binding Converter="{StaticResource stringOrDevaultConverter}"
                             ConverterParameter="New Tag"
                             Path="SelectedTag.Name"
                             UpdateSourceTrigger="PropertyChanged" />
                </TextBox.Text>
            </TextBox>

            <TextBlock Grid.Row="1"
                       Margin="0,0,10,0"
                       VerticalAlignment="Top">
                Color
            </TextBlock>

            <ctrl:ColorPicker Grid.Row="1"
                              Grid.Column="1"
                              MaxWidth="200"
                              HorizontalAlignment="Left"
                              SelectedColor="{Binding SelectedTag.Color, Converter={StaticResource colorToColorConverter}}" />
        </Grid>

        <mwpf:SimpleStackPanel Grid.Row="2"
                               Grid.Column="1"
                               Margin="0,5,0,0"
                               FlowDirection="RightToLeft"
                               Orientation="Horizontal"
                               Spacing="5">
            <Button Click="SaveButton_Click"
                    IsDefault="True"
                    Style="{StaticResource AccentButtonStyle}">
                Save
            </Button>
            <Button Click="CancelButton_Click" IsCancel="True">Cancel</Button>
        </mwpf:SimpleStackPanel>
    </Grid>
</Window>
