<Window x:Class="SpellCardManager.WPFApp.Views.SpellEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cvt="clr-namespace:SpellCardManager.WPFApp.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SpellCardManager.WPFApp.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:modernwpf="http://schemas.modernwpf.com/2019"
        xmlns:vm="clr-namespace:SpellCardManager.ViewModels;assembly=SpellCardManager"
        Name="root"
        Title="SpellEditorWindow"
        Width="800"
        Height="700"
        d:DataContext="{d:DesignInstance vm:SpellEditorViewModel}"
        modernwpf:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d">
    <Window.Resources>
        <FontFamily x:Key="CascadiaMono">/Assets/#Cascadia Mono</FontFamily>
        <cvt:ColorToBrushConverter x:Key="colorToBrushConverter" />
        <cvt:DarkOrLightTextConverter x:Key="darkOrLightTextConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.ColumnSpan="3"
                      Margin="0,0,0,10"
                      Padding="10,10,10,0"
                      Background="{StaticResource {x:Static SystemColors.ControlBrushKey}}"
                      BorderBrush="#FFA0A0A0"
                      BorderThickness="0,0,0,1"
                      VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBox Margin="0,0,0,10"
                             modernwpf:ControlHelper.PlaceholderText="Spell name"
                             Style="{StaticResource TextBoxH1Style}"
                             Text="{Binding SpellName, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Resources>
                            <!--  Hack to make the placeholder text the same size as the content  -->
                            <Style BasedOn="{StaticResource TextBlockH1Style}" TargetType="TextBlock" />
                        </TextBox.Resources>
                    </TextBox>

                    <TextBlock Style="{StaticResource TextBlockH2Style}">Tags</TextBlock>
                    <modernwpf:AutoSuggestBox Width="300"
                                              Margin="0,0,0,10"
                                              HorizontalAlignment="Left"
                                              QuerySubmitted="AutoSuggestBox_QuerySubmitted"
                                              Text="{Binding TagBoxContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              TextChanged="AutoSuggestBox_TextChanged" />
                    <ItemsControl ItemsSource="{Binding Tags}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <local:Tag Margin="0,0,7,7"
                                           CloseButtonVisiblity="Visible"
                                           CloseCommand="{Binding DataContext.RemoveTagCommand, ElementName=root}"
                                           CloseCommandParameter="{Binding Name}"
                                           Foreground="{Binding Color, Converter={StaticResource darkOrLightTextConverter}}"
                                           TagBackground="{Binding Color, Converter={StaticResource colorToBrushConverter}}"
                                           Text="{Binding Name}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Style="{StaticResource TextBlockH2Style}">Attributes</TextBlock>
                    <Grid HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <DataGrid Grid.RowSpan="3"
                                  Grid.ColumnSpan="3"
                                  MinWidth="300"
                                  MinHeight="50"
                                  MaxWidth="500"
                                  Margin="0,0,5,5"
                                  AutoGenerateColumns="True"
                                  BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                                  BorderThickness="1,0,1,0"
                                  HeadersVisibility="None"
                                  ItemsSource="{Binding Attributes}" />
                        <Button Grid.Row="0"
                                Grid.Column="3"
                                Margin="0,0,0,5"
                                Command="{Binding MoveRowUpCommand}"
                                Content="↑" />
                        <Button Grid.Row="1"
                                Grid.Column="3"
                                Command="{Binding MoveRowDownCommand}"
                                Content="↓" />
                        <Button Grid.Row="3"
                                Grid.Column="0"
                                Margin="0,0,5,0"
                                Command="{Binding AddAttributeRowCommand}"
                                Content="New" />
                        <Button Grid.Row="3"
                                Grid.Column="1"
                                Command="{Binding RemoveAttributeRowCommand}"
                                Content="Delete" />
                    </Grid>

                    <TextBlock Margin="0,5,0,0" Style="{StaticResource TextBlockH2Style}">Description</TextBlock>
                </StackPanel>

                <TextBox Grid.Row="1"
                         MinHeight="100"
                         Margin="0,0,0,10"
                         AcceptsReturn="True"
                         FontFamily="{StaticResource CascadiaMono}"
                         Text="{Binding SpellDescription}"
                         TextWrapping="Wrap" />
            </Grid>
        </ScrollViewer>

        <Button Name="CancelButton"
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,0,5,10"
                Click="CancelButton_Click"
                IsCancel="True">
            Discard Changes
        </Button>
        <Button Name="SaveButton"
                Grid.Row="1"
                Grid.Column="2"
                Margin="0,0,10,10"
                Click="SaveButton_Click"
                IsDefault="True"
                IsEnabled="{Binding CanSave}"
                Style="{StaticResource AccentButtonStyle}">
            Accept Changes
        </Button>
    </Grid>
</Window>
