<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!--  Makes menu bars resemble classic Win7 menu bars, instead of being huge  -->
    <sys:Double x:Key="MenuBarHeight">20</sys:Double>
    <Thickness x:Key="MenuBarItemMargin">4,2,4,2</Thickness>

    <sys:Double x:Key="MenuItem.SubmenuItem.Height">22</sys:Double>
    <Thickness x:Key="MenuItem.SubmenuItem.Padding">10,0,10,0</Thickness>

    <sys:Double x:Key="MenuItemFontSize">13</sys:Double>

    <Style BasedOn="{StaticResource DefaultMenuStyle}" TargetType="Menu">
        <Setter Property="Height" Value="{StaticResource MenuBarHeight}" />
    </Style>

    <Style BasedOn="{StaticResource DefaultMenuItemStyle}" TargetType="MenuItem">
        <Setter Property="FontSize" Value="{DynamicResource MenuItemFontSize}" />

        <Style.Triggers>
            <Trigger Property="Role" Value="TopLevelHeader">
                <Setter Property="Height" Value="{StaticResource MenuBarHeight}" />
            </Trigger>
            <Trigger Property="Role" Value="TopLevelItem">
                <Setter Property="Height" Value="{StaticResource MenuBarHeight}" />
            </Trigger>

            <Trigger Property="Role" Value="SubmenuItem">
                <Setter Property="Height" Value="{StaticResource MenuItem.SubmenuItem.Height}" />
                <Setter Property="Padding" Value="{StaticResource MenuItem.SubmenuItem.Padding}" />
            </Trigger>

            <Trigger Property="Role" Value="SubmenuHeader">
                <Setter Property="Height" Value="{StaticResource MenuItem.SubmenuItem.Height}" />
                <Setter Property="Padding" Value="{StaticResource MenuItem.SubmenuItem.Padding}" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>